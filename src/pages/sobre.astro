        padding: 0;
        position: relative;
        overflow: hidden;
        text-align: center;

        @include media-breakpoint-down(md) {
            margin-bottom: 2rem;
        }

        @include media-breakpoint-up(md) {
            max-width: 75%;
        }

        @include media-breakpoint-down(sd) {
            margin-left: auto;
            margin-right: auto;
            max-width: 50%;
        }

        @include media-breakpoint-up(sd) {
            margin-right: 2rem;
        }

        @include media-breakpoint-up(lg) {
            max-width: 25%;
        }

        img {
            border-radius: 100%;
        }

        a {
            display: inline-block;
            margin-inline-end: .5rem;
            line-height: 40px;
        }
    }

    .bio {
        .center-content {
            max-width: 880px;
        }

        .bio-content {
            display: flex;
            align-items: end;

            blockquote {
                border-left: 4px solid var(--dark);
            }
        }

    }

    .card-list {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        margin: 0;
        padding: 0;
        align-content: stretch;

        li {
            flex: 1;
            margin: 0.2rem;
            padding: 1.6rem;
            background-color: var(--dark);
