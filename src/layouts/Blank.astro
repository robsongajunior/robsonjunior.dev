---
import BaseHead from '../components/BaseHead.astro';

import Kbar from '../components/react/Kbar/Kbar.tsx'
import KbarButtonHook from '../components/react/Kbar/KbarButtonHook.tsx';
const { title='', description=''} = Astro.props;
---

<html lang="pt-BR">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
        <!-- Google Tag Manager (noscript) -->
        <noscript>
            <iframe
                src="https://www.googletagmanager.com/ns.html?id=GTM-PD9CKQS5"
                height="0"
                width="0"
                style="display:none;visibility:hidden">
            </iframe>
        </noscript>
        <!-- End Google Tag Manager (noscript) -->

        <Kbar client:load />
        <KbarButtonHook />
		<slot />
	</body>
</html>
