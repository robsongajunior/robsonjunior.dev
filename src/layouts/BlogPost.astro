---
// import type { CollectionEntry } from "astro:content";
import Head from "@components/Head.astro";
import Header from "@components/blocking-builds/Header.astro";
import Footer from "@components/blocking-builds/Footer.astro";
import FormattedDate from "@components/FormattedDate.astro";
import Kbar from "@components/react/Kbar/Kbar.jsx";
import NavigationRight from "@components/vue/NavigationRight.vue";
import ShadowMouseMove from "@components/ShadowMouseMove.astro";
import Trd3 from "@components/Trd3.astro";

const {
    lang,
    title,
    meta_description,
    date,
    // dateUpdate,
    heroImage,
} = Astro.props;

import { getData } from "@utils/data.js";
const menuItems = getData.components.header[lang].menu.items;
---

<style scoped>
    main {
        padding: 2rem 0;
    }
</style>

<html {lang}>
    <head>
        <Head title={title} description={meta_description} />

        <style>
            main {
                margin: 0;
            }
            .hero-image {
                width: 100%;
                overflow: hidden;
                height: 400px;
            }
            .hero-image img {
                width: auto;
                height: 400px;
                display: block;
                margin: 0 auto;
                border-radius: 12px;
                box-shadow: var(--box-shadow);
            }
            .prose {
                width: 720px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 1em;
                color: rgb(var(--gray-dark));
            }
            .title {
                margin: 1rem 0;
                text-align: center;
                line-height: 1;
            }
            .title h1 {
                margin: 0;
            }
            .date {
                margin-bottom: 0.5em;
                color: rgb(var(--gray));
            }
            .last-updated-on {
                font-style: italic;
            }
        </style>
    </head>

    <body>
        <div style="position: relative; z-index: 1;">
            <Kbar client:load />
            <Header items={menuItems} lang={lang} />
            <NavigationRight client:load items={menuItems} />

            <main>
                <article>
                    <div class="hero-image">
                        {
                            heroImage && (
                                <img
                                    width={1020}
                                    height={510}
                                    src={heroImage}
                                    alt={title}
                                />
                            )
                        }
                    </div>

                    <div class="prose">
                        <div class="title">
                            <div class="date">
                                <FormattedDate date={date} />
                                <!-- {
                                    dateUpdate && typeof dateUpdate !== 'string' ? (
                                        <div class="last-updated-on">
                                            Last updated on{" "} <FormattedDate date={dateUpdate} />
                                        </div>
                                    ) : ''
                                } -->
                            </div>
                            <h1>{title}</h1>
                        </div>

                        <slot />
                    </div>
                </article>
            </main>

            <Footer />
        </div>

        <Trd3 />
        <ShadowMouseMove />
    </body>
</html>
