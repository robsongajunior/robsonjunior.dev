---
const { title } = Astro.props;
---

<span class="borntobuildanddeliver" set:html={title} />

<style lang="scss" is:global>
    @import '@styles/breakpoints';

    .borntobuildanddeliver {
        font-weight: 200;
        color: var(--light);

        strong {
            font-weight: 900;
        }

        br {
            @include media-breakpoint-down(sd) {
                display: inline;
            }

            @include media-breakpoint-up(sd) {
                display: none;
            }
        }
    }
</style>
