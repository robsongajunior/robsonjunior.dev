---
const { title } = Astro.props;
---

<span class="borntobuildanddeliver" set:html={title} />

<style lang="scss" is:global>
    @import '@styles/breakpoints';

    .borntobuildanddeliver {
        font-weight: 200;
        color: var(--light);

        strong {
            font-weight: 900;
        }

        br {
            @include media-breakpoint-down(sd) {
                display: inline;
            }

            @include media-breakpoint-up(sd) {
                display: none;
            }
        }


        @include media-breakpoint-up(lg) {
            font-size: 72px; /* Size of the text */
        }

        strong {
            /* The 3D effect */
            text-shadow:
                1px 1px 0 #bbb, /* Layered shadows for 3D depth */
                2px 2px 0 #999,
                3px 3px 0 #777,
                4px 4px 0 #555,
                5px 5px 0 #333,
                6px 6px 2px rgba(0,0,0,0.5), /* Soft shadow for 3D effect */
                6px 6px 1px rgba(0,0,0,0.2), /* Adding some blur for realism */
                0 0 5px rgba(0,0,0,0.1), /* Soft glow around the text */
                0 0 10px rgba(0,0,0,0.05); /* Wider glow for further depth */

            /* Optional: Add a perspective */
            transform: perspective(500px) rotateX(10deg) rotateY(10deg);
        }
    }
</style>
