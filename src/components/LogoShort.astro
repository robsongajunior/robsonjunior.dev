---
const { href, title } = Astro.props;
---

<a
    href={href}
    title={title}
    id="LogoShort"
    class="logo-short">

    <p>
        <strong>R</strong>
    </p>
</a>

<style lang="scss" scoped>
    .logo-short {
        display: inline-block;
        color: var(--lighter);
        text-decoration: none;


        &:hover {
            cursor: pointer;
            color: var(--median-strong);
        }

        p {
            font-weight: 200;
            font-size: 1.25rem;
            width: 38px;
            height: 38px;
            line-height: 38px;
            border-radius: 4px;
            text-align: center;
        }

        strong {
            font-weight: 900;
            color: var(--light);
        }
    }
</style>
