---
interface Props {
    title: string,
    description: string,
    cards: {
        title: string,
        description: string,
        link: string,
        linkHrefTitle: string,
        linkHref: string
    }[]
};

const { title, description, cards } = Astro.props;
---

<section>
    <div class="center-content">
        <h2>{title}</h2>
        <p set:html={description} />

        <ul class="card-list">
            {
                cards.map(card => (
                    <li class="card">
                        <div class="card-content">
                            <h3>{card.title}</h3>
                            <p set:html={card.description} />
                            { card.linkHref ?
                                <a
                                    href={card.linkHref}
                                    title={card.linkHrefTitle}
                                    target="_blank">

                                    {card.link}
                                </a>: ''
                            }
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</section>

<style lang="scss">
    @import '../../styles/breakpoints';

    .card-list {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        margin: 2rem 0 0;
        padding: 0;
        align-content: stretch;
        gap: 1rem;

        .card {
            flex: 1;
            min-width: 320px;
        }

        .card-content {
            padding: 2rem;
            background: linear-gradient(71deg, var(--dark-strong), #191919, var(--dark-strong));
            border-radius: 80px;
            background-clip: padding-box;
            position: relative;
            border: 2px solid transparent;

            &::after {
                // z-index: 1;
                border-radius: 80px;
                position: absolute;
                top: -1px;
                bottom: -1px;
                left: -1px;
                right: -1px;
                content: "";
                z-index: -1;
                background: linear-gradient(71deg, var(--dark-strong), #454545, var(--dark-strong));
            }
        }
    }
</style>
