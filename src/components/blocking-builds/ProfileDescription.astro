        <h1 set:html={title} class="text-3d"/>
        {
            description.map(paragraph => (
                <p set:html={paragraph} />
            ))
        }
    </div>
</section>

<style lang="scss">
    @import '../../styles/breakpoints';

    .hero {
        align-items: center;

        @include media-breakpoint-up(sd) {
            display: flex;
        }
    }

    .figure-content {
        padding: 0;
        position: relative;
        overflow: hidden;
        text-align: center;
        min-width: 280px;

        @include media-breakpoint-down(sd) {
            margin-left: auto;
            margin-right: auto;
            max-width: 25%;
        }

        @include media-breakpoint-up(sd) {
            margin-right: 2rem;
        }

        @include media-breakpoint-up(lg) {
            max-width: 30%;
        }

        figure {
            background: linear-gradient(-71deg, var(--dark-strong), var(--dark), var(--dark-strong));
            border-radius: 8px;
            background-clip: padding-box;
            position: relative;
            border: 2px solid transparent;
            min-width: 260px;
            max-width: 280px;

            &::after {
                border-radius: 8px;
                position: absolute;
                top: -1px;
                bottom: -1px;
                left: -1px;
                right: -1px;
                content: "";
                z-index: -1;
                background: linear-gradient(-71deg, var(--dark-strong), rgba(255, 255, 255, .5), var(--dark-strong));
            }

            img {
                width: 100%;
                display: block;
            }
        }

        a {
            display: inline-block;
            margin-inline-end: .5rem;
            line-height: 40px;
        }
    }

    .description {
        max-width: 768px;
    }
</style>
