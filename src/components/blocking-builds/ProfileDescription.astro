---
interface Props {
    imgSrc: string,
    imgAlt: string,
    title: string,
    description: string,
    linkedinUrl: string,
    linkedinUrlTitle: string,
    instagramUrl: string,
    instagramUrlTitle: string,
    speakerdeckUrl: string,
    speakerdeckUrlTitle: string
