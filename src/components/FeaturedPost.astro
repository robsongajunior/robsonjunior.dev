---
const { post } = Astro.props
const {
    heroImage,
    heroAltImage,
    title,
    date,
    dateUpdate,
    meta_description,
    categories
} = post.data
---

<section class="featured-post">
    <a href=`/${post.slug}/` title={ title }>
        <figure class="featured-img-content">
            <img src={heroImage} alt={heroAltImage} class="featured-img">
        </figure>
        <div class="post-content">
            <h1>
                { title }
            </h1>
            <p style="margin-top: -10px;">
                <small>
                    <strong>Date:</strong> { date }
                    <!--
                    <br>
                    { dateUpdate }
                    -->
                </small>
            </p>
            <ul class="tag-list">
            {
            categories.slice(0,3).map((category) => (
                <li class="tag-item">
                    <span class="tag">
                        { category }
                    </span>
                </li>
            ))
            }
            </ul>
            <p>
                { meta_description }
            </p>
        </div>
    </a>
</section>

<style lang="scss" scoped>
    @import '../styles/breakpoints';

    .featured-post a {
        text-decoration: none;
        @include media-breakpoint-up(sd) {
            display: flex;
            // align-items: center;
        };
    }

    .featured-img-content,
    .post-content {
        display: block;

        @include media-breakpoint-up(sd) {
            max-width: 50%;
        }
    }

    .featured-img-content {
        display: block;
        margin: 0 2rem 2rem 0;
        padding: 0;
        width: 100%;

        @include media-breakpoint-up(sd) {
            max-width: 38%;
            margin: 0 2rem 0 0;
        };

        img {
            display: block;
            width: 100%;
        }
    }

    // tag component
    .tag-list {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem;
        display: flex;
        gap: 1rem;
    }
    .tag {
        display: inline-block;
        border: solid 1px var(--light);
        border-radius: 4px;
        padding: .25rem .5rem;
        font-size: 0.75rem;
        line-height: 1rem;
    }
</style>
