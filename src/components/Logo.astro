---
const { href, title } = Astro.props;
---

<a
    href={href}
    title={title}
    id="logo"
    class="logo"
>
    <p>
        <strong>ROBSON</strong>JUNIOR
    </p>
</a>

<style>
    .logo {
        display: inline-block;
        color: var(--mediam);
        text-decoration: none;
    }

    .logo:hover {
        cursor: pointer;
        color: var(--lighter);
    }
    
    p {
        font-weight: 200;
    }

    strong {
        font-weight: 900;
    }
</style>